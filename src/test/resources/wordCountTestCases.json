	},
	{
		"name": "TestCase_4",
		"request": { "method": "POST", "url": "/wordcount/numberofwords?startingchar=A", "body": { "inputList": [ "mama momo", "m@123" ] } },
		"expectedResponse": { "status": 200, "body": { "startingChar": "A", "wordCountStartingWithInputChar": 0 } }
	},
	{
		"name": "TestCase_5",
		"request": { "method": "POST", "url": "/wordcount/summary", "body": { "inputList": [ "mama momo", "m@123" ] } },
